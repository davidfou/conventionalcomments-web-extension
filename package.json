    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "10.1.0",
    "tailwind-merge": "3.3.0",
    "tailwindcss": "4.1.8",
    "tailwindcss-animate": "1.0.7",
    "tiny-invariant": "1.3.3",
