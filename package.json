{
  "name": "conventionalcomments-web-ext",
  "description": "manifest.json description",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip:chrome": "wxt zip",
    "publish:chrome": "wxt submit --chrome-zip .output/*-chrome.zip",
    "zip:firefox": "wxt zip -b firefox",
    "publish:firefox": "wxt submit --firefox-zip .output/*-firefox.zip --firefox-sources-zip .output/*-sources.zip",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "storybook": "storybook dev -p 6006",
    "playwright:components": "playwright test -c tests/components/playwright.config.ts",
    "playwright:e2e": "playwright test -c tests/e2e/playwright.config.ts",
    "lint": "oxlint --max-warnings=0"
  },
  "dependencies": {
